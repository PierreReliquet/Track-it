<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pierrrrrrrot.loanmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.pierrrrrrrot.loanmanager.activities.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.pierrrrrrrot.loanmanager.activities.AddLoan"
            android:label="@string/menu_add_loan"
            android:parentActivityName="org.pierrrrrrrot.loanmanager.activities.Menu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.pierrrrrrrot.loanmanager.activities.Menu" />
        </activity>
        <activity
            android:name="org.pierrrrrrrot.loanmanager.activities.ListBorrowers"
            android:label="@string/title_activity_list_borrowers"
            android:parentActivityName="org.pierrrrrrrot.loanmanager.activities.Menu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.pierrrrrrrot.loanmanager.activities.Menu" />
        </activity>
        <activity
            android:name="org.pierrrrrrrot.loanmanager.activities.ListLoans"
            android:label="@string/title_activity_list_loans"
            android:parentActivityName="org.pierrrrrrrot.loanmanager.activities.Menu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.pierrrrrrrot.loanmanager.activities.Menu" />
        </activity>
    </application>

</manifest>