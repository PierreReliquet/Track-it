<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.free.pierre.reliquet.loansmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="fr.free.pierre.reliquet.loansmanager.Menu"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.free.pierre.reliquet.loansmanager.activities.AddLoan"
            android:label="@string/menu_add_loan"
            android:parentActivityName="fr.free.pierre.reliquet.loansmanager.Menu"
            android:screenOrientation="portrait" 
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.pierre.reliquet.loansmanager.activities.Menu" />
        </activity>
        <activity
            android:name="fr.free.pierre.reliquet.loansmanager.activities.ListBorrowers"
            android:label="@string/title_activity_list_borrowers"
            android:parentActivityName="fr.free.pierre.reliquet.loansmanager.Menu" 
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.pierre.reliquet.loansmanager.activities.Menu" />
        </activity>
        <activity
            android:name="fr.free.pierre.reliquet.loansmanager.activities.ListLoans"
            android:label="@string/title_activity_list_loans"
            android:parentActivityName="fr.free.pierre.reliquet.loansmanager.Menu" 
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.pierre.reliquet.loansmanager.activities.Menu" />
        </activity>
        <activity
            android:name="fr.free.pierre.reliquet.loansmanager.activities.ListProducts"
            android:label="@string/title_activity_list_products"
            android:parentActivityName="fr.free.pierre.reliquet.loansmanager.Menu" 
            android:screenOrientation="portrait"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.pierre.reliquet.loansmanager.Menu" />
        </activity>
        <activity
            android:name="fr.free.pierre.reliquet.loansmanager.activities.CloseLoan"
            android:label="@string/title_activity_close_loan"
            android:parentActivityName="fr.free.pierre.reliquet.loansmanager.Menu"
            android:screenOrientation="portrait"
             >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.pierre.reliquet.loansmanager.Menu" />
        </activity>
    </application>

</manifest>