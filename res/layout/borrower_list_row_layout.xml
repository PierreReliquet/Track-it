<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="5dp"
              android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.93"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/borrower_list_row_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="left"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/borrower_list_row_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="left"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/borrower_list_row_average_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="left"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/borrower_list_row_number_loans"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="left"
            android:textIsSelectable="false"/>

        <TextView
            android:id="@+id/borrower_list_row_active_number_loans"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="left"
            android:textIsSelectable="false"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/borrower_list_row_action_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.07"
        android:src="@drawable/go"/>

</LinearLayout>